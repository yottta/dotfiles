#!/bin/bash

#####-------------EXPORTS------------#####
# eclipse
export ECLIPSE_HOME=$SOFTS_PATH/eclipse

# ant
export ANT_HOME=$SOFTS_PATH/apache-ant-1.9.6

# apache tomcat
export TOMCAT_HOME=$SOFTS_PATH/apache-tomcat-7.0.42

# gradle
export GRADLE_HOME=$SOFTS_PATH/gradle-4.1

# include all above software into PATH
export PATH=${ANT_HOME}/bin:${TOMCAT_HOME}/bin:${GRADLE_HOME}/bin:$PATH
export PATH="$SOFTS_PATH/bin:$PATH"

alias python="/usr/bin/python3"
alias pip="/usr/local/bin/pip3"

